<div class="container mt-5">
	<h3>Categories</h3>

	<table class="table table-striped table-hover">
  	<thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category</th>
    </tr>
  </thead>
  <tbody>
		<% @category.each do |category| %>
	    <tr>
	      <th scope="row"><%= category.id %></th>
	      <td><%= link_to category.name, category_path(category) %></td>
	    </tr>
	  <% end -%>
  </tbody>
	</table>

</div>