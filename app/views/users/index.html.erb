<div class="container">
	<h2>Our bloggers</h3>
		<div class="container">
		<% @user.each do |user| %>
			<div class="card d-inline-flex me-2 mb-3" style="width: 18rem;">
			  <div class="card-body">
			    <h5 class="card-title"><%= link_to user.username, user_path(user) %></h5>
			    <h6 class="card-subtitle mb-2 text-muted"><%= user.email %></h6>
			    <p class="card-text">
			    	<%= pluralize(user.articles.count, "article") %>
			    </p>
			    <%= link_to 'Show', user_path(user), class: "card-link btn btn-outline-secondary"%>
			    <%= link_to 'Edit', edit_user_path(user), class: "card-link btn btn-outline-secondary"%>
			  </div>
			</div>	
		<% end -%>
		</div>

	<%= link_to 'Return to Blog', root_path %>
</div>